= form_for @itinerary, :html => {:class => 'form-horizontal'} do |f|
  - if @itinerary.errors.any?
    #error_explanation
      %h2= "#{pluralize(@itinerary.errors.count, "error")} prohibited this itinerary from being saved:"
      %ul
        - @itinerary.errors.full_messages.each do |msg|
          %li= msg

  .form-group.col-sm-8
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10= f.text_field :name, class: 'form-control'
  .form-group.col-sm-8
    = f.label :description, class: 'col-sm-2 control-label'
    .col-sm-10= f.text_area :description, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary col-sm-3'
