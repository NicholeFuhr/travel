= form_for @itinerary do |f|
  - if @itinerary.errors.any?
    #error_explanation
      %h2= "#{pluralize(@itinerary.errors.count, "error")} prohibited this itinerary from being saved:"
      %ul
        - @itinerary.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
