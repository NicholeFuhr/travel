
<script>
window.gmap_points = <%= raw@hash.to_json %>
</script>

<div class='row' id='points-wrap'>
  <% @points.each do |point| %>
    <%= render 'points/point', point: point, itinerary: @itinerary %>
  <% end %>
</div>

<script>
$( ".pointbot" ).mouseenter(function() {
  $(this).parent().nextAll(".description").fadeIn();

    window.as = $( this ).attr("lat"),
    window.asd = $( this ).attr("lng"),

  $(function () {
    var position = new google.maps.LatLng(as, asd);
    map.panTo(position);
    map.setZoom(14);
  });
});
$( ".pointbot" ).mouseleave(function() {
  $(this).parent().nextAll(".description").fadeOut();
});
</script>
