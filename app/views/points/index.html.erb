<h1>Listing points</h1>

<table>
  <tr>
    <th>Lat</th>
    <th>Lng</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @points.each do |point| %>
  <tr>
    <td><%= point.latitude %></td>
    <td><%= point.longitude %></td>
    <td><%= point.name %></td>
    <td><%= point.description %></td>
    <td><%= link_to 'Show', point %></td>
    <td><%= link_to 'Edit', edit_point_path(point) %></td>
    <td><%= link_to 'Destroy', point, method: :delete, data: { confirm: 'Are you sure?' } %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Point', new_point_path %>

<div class="map-wrap">
  <div id="map-canvas" style='width: 800px; height: 400px;'></div>
</div>
<script>
window.gmap_points = <%= raw@hash.to_json %>
</script>
