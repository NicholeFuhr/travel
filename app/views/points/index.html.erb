<body>
    <header>
      <div id="ry4ApEskHmd4cTycm7uvWcrCFV73dcZ3" class="widget widget-section">
         <% if user_signed_in? %>
            <%= current_user.email %>
            <a class='btn  btn-primary'
            <%= link_to 'Выйти', destroy_user_session_path, method: 'delete' %>
            </a>
        <% end %>
       </div>
    </header>
      <div class="heading">
          <h1>Места</h1>
      </div>
        <div class="heading"></div>
        <h3 class='clearfix'>Ваши места</h3>
        <div class="row">
            <aside class="col-md-7 float-left">
                  <ul class='points-list'>
                  <% @points.each do |point| %>
                    <li>
                    <span class='point-name'> <%= point.name %> </span><br>
                    <%= point.description %>
                    <span class='options'>
                      <%= link_to 'Show', point %>
                      <%= link_to 'Edit', edit_point_path(point) %>
                      <%= link_to 'Destroy', point, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </span>
                    </li>
                <% end %>
                </ul>
            </aside>
      <section class="col-md-17">
          <div id="map-canvas" ></div>
      </section>
  <footer></footer>
